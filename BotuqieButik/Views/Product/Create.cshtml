@using BotuqieButik.data.Entitis
@using Microsoft.EntityFrameworkCore.Metadata.Internal

@{
    ViewData["Title"] = "Create";
}

@model Product

<h1>Ürün Ekle</h1>

<form class="container" method="post" asp-controller="Product" asp-action="Create">
    <div class="mb-3">
        <label class="form-label">Ürün ismi</label>
        <input asp-for="Name" type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Fiyat</label>
        <input asp-for="Price" type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Kategori seçiniz</label>
        <select class="form-select" aria-label="Kategori">
            @foreach (var item in (List<Category>)ViewBag.Categories)
          {
                <option value="ViewBag.CategoryId=@item.Id">@item.Name</option>
            }
            
        </select>
    </div>

  

    <div class="row">
        <div class="col-md-12">
            <form asp-action="UploadImage" enctype="multipart/form-data" method="POST">
                <h2 class="text-center lead"> Resim Yükle</h2>
                <div class="form-group">
                    <label for="exampleInputEmail1">Resim Bilgileri</label>
                    <input type="file" name="file" class="form-control" />
                </div>
                <div class="form-group text-right">
                    <input type="submit" class="btn btn-success btn-sm w-25" value="Resim Yükle" />
                </div>
            </form>
        </div>
    </div>


    <div class="mb-3">
        <label class="form-label">Stok</label>
        <input asp-for="Stock" type="text" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

