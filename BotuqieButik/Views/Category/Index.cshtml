@using BotuqieButik.data.Entitis

@{
    ViewData["Title"] = "Index";
}
@model List<Category>
<h1>Index</h1>

<div class="container">
    <div class="col-2 mt-2 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i>
            Kategori Ekle
        </a>
    </div>

    <table class="table table-bordered mt-3">
        <thead>

            <tr>
                <th class="bg-black text-white">
                    Kategori ismi
                </th>
                <th class="bg-black text-white">
                    Kategori Açıklaması
                </th>
                <th class="bg-black text-white">
                    İşlemler
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name </td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-controller="Category" asp-action="Update" asp-route-id="@item.Id" class="btn btn-secondary">Düzenle</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

